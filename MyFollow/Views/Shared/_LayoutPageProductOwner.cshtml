<!DOCTYPE html>
<html data-ng-app="AppRoute">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Follow</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Follow", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Index", "Index", "ProductOwners")</li>
                        <li>@Html.ActionLink("Add Product", "Create", "Products")</li>
                        <li>@Html.ActionLink("Update Products", "Index", "Products")</li>
                        <li>@Html.ActionLink("Edit Profile", "Edit", "ProductOwners")</li>*@
                    <li><a href="">Index</a></li>
                    <li data-ng-app data-ng-controller="ProductController"><a href="#/AddNewProduct/@ViewBag.Id">Add Product</a></li>
                    <li data-ng-app data-ng-controller="ProductController"><a href="#/ListProduct/@ViewBag.Id" >List Products</a></li>
                    <li data-ng-app data-ng-controller="ProductOwnerController" ><a  href="#/EditProductOwner/@ViewBag.Id">Edit Profile</a></li>
                    
                </ul>
                @Html.Partial("_LoginPartial")
                
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Follow</p>
        </footer>
    </div>
    <script src="Scripts/jquery-1.10.2.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/AngularRoute")
    @Scripts.Render("~/bundles/AppRoute")
    <script src="~/Scripts/knockout-2.0.0.debug.js"></script>
    <script src="~/Scripts/multi-uploader.js"></script>

</body>
</html>
